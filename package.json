{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint packages/stencil-library/src/**/*{.ts,.tsx} && prettier --check packages/stencil-library/src/**/*{.ts,.tsx}",
    "prepare": "husky install",
    "publish-stencil": "cd packages/stencil-library && npm run publish",
    "publish-angular": "cd packages/angular-workspace && npm run publish",
    "publish-react": "cd packages/react-library && npm run publish",
    "publish-vue": "cd packages/vue-library && npm run publish",
    "prepublish": "lerna version --no-private --no-push ",
    "publish": "npm run publish-stencil && npm run publish-angular && npm run publish-react && npm run publish-vue"
    
  },
  "dependencies": {
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@stencil-community/eslint-plugin": "^0.7.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-html": "^7.1.0",
    "husky": "^8.0.3",
    "lerna": "^7.4.2",
    "lint-staged": "^14.0.1",
    "prettier": "3.0.3"
  }
}
